<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

    <TextView
        android:id="@+id/tvDishName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tvServe"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:text="asdasdasdasdasda"
        android:textSize="@dimen/size_large_text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvTableNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDishName"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/tvServe"
        android:text="Table No. 2"
        android:textSize="@dimen/size_medium_text"/>

    <TextView
        android:id="@+id/tvServe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="24dp"
        android:fontFamily="sans-serif"
        android:text="Serve"
        android:textColor="@color/order_green"
        android:textSize="@dimen/size_x_large_text"/>
</RelativeLayout>